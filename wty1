#include <stdio.h>
#include <stdlib.h>
int main()
{
	float a,b;
	char suanfa;
	printf("输入算法\n");
	scanf("%c",&suanfa);
	printf("输入数字\n");
    scanf("%f",&a);
    scanf("%f",&b);
    switch(suanfa)
    {
    
	case '+':
		printf("%.2f+%.2f=%.2f\n",a,b,a+b);break;
    case '-':
		printf("%.2f-%.2f=%.2f\n",a,b,a-b);break;
    case '*':
		printf("%.2f*%.2f=%.2f\n",a,b,a*b);break;
    case '/':
		printf("%.2f/%.2f=%.2f\n",a,b,a/b);break;
    }
}
